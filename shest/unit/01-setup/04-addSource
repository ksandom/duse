#!/bin/bash
# Test --addSource.

. "$SHEST_SCRIPT" "--doNothing"

expectedDuseHome="$HOME/.config/duse"

result="$(./bin/duse --addSource shoots source/source1 archiveShoots 2>&1)"
exitCode=$?
expect_exitCode 0

result="$(./bin/duse --addSource shoots source/source2 primaryShoots 2>&1)"
exitCode=$?
expect_exitCode 0

expect_exists "$expectedDuseHome/contexts/shoots/sources/primaryShoots"
expect_exists "$expectedDuseHome/contexts/shoots/sources/archiveShoots"
